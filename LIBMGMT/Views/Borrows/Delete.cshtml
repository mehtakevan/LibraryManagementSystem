@model LIBMGMT.Models.Borrow

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-image: url('https://media.istockphoto.com/id/1392425149/vector/books-swap-exchange-or-crossing-concept.webp?s=2048x2048&w=is&k=20&c=gWTHC7xsdB2PImqRHFULl5p4MCFirCmCJT9Na7VMMoM=');
            background-size: cover;
            font-family: Arial, sans-serif;
        }

        h3 {
            font-size: 24px;
            color: #333;
            margin-top: 20px;
        }


        .row {
            background-color: #fff;
            padding: 15px;
            border-radius: 5px;
        }

        .col-sm-2 {
            font-weight: bold;
            text-align: right;
        }

        .col-sm-10 {
            padding-left: 10px;
        }

        .btn-danger {
            background-color: #dc3545;
            color: #fff;
            margin-right: 10px;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
        }
    </style>
</head>
<body>
    <h3>Are you sure you want to delete this?</h3>
    <div class="container">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TakenDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TakenDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BroughtDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BroughtDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.BookId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Student)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Student.StudentId)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="BorrowId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</body>
</html>
