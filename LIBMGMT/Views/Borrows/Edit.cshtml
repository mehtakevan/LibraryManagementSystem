@model LIBMGMT.Models.Borrow

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-image: url('https://media.istockphoto.com/id/1392425149/vector/books-swap-exchange-or-crossing-concept.webp?s=2048x2048&w=is&k=20&c=gWTHC7xsdB2PImqRHFULl5p4MCFirCmCJT9Na7VMMoM=');
            background-size: cover;
            font-family: Arial, sans-serif;
        }

        h1 {
            font-size: 24px;
            color: #333;
            margin-top: 20px;
        }

       

        .form-group {
            margin-bottom: 20px;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
        }

        .form-control {
            border: 1px solid #ccc;
            border-radius: 5px;
        }
    </style>
</head>
<body>
        <h1>Edit Borrow</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="BorrowId" />

                    <div class="form-group">
                        <label asp-for="StudentId" class="control-label">Student</label>
                        <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                        <span asp-validation-for="StudentId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BookId" class="control-label">Book</label>
                        <select asp-for="BookId" class="form-control" asp-items="ViewBag.BookId"></select>
                        <span asp-validation-for="BookId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TakenDate" class="control-label">Taken Date</label>
                        <input asp-for="TakenDate" class="form-control" />
                        <span asp-validation-for="TakenDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BroughtDate" class="control-label">Brought Date</label>
                        <input asp-for="BroughtDate" class="form-control" />
                        <span asp-validation-for="BroughtDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
        
    </div>
</body>
</html>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
