@model LIBMGMT.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-image: url('https://images.unsplash.com/photo-1514593214839-ce1849100055?auto=format&fit=crop&q=80&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&w=1974');
            background-size: cover;
        }

        h3 {
            font-size: 24px;
            color: #333;
            margin-top: 20px;
        }



        .row {
            background-color: #fff;
            padding: 15px;
            border-radius: 5px;
        }

        .col-sm-2 {
            font-weight: bold;
            text-align: right;
        }

        .col-sm-10 {
            padding-left: 10px;
        }

        .btn-danger {
            background-color: #dc3545;
            color: #fff;
            margin-right: 10px;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
        }
    </style>
</head>
<body>
    <h3>Are you sure you want to delete this?</h3>
    
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PageCount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PageCount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Author)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Author.AuthorId)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="BookId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </>
</body>
</html>
