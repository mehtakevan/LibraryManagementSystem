@model LIBMGMT.Models.Author

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-image: url('https://media.istockphoto.com/id/1271367191/vector/girl-writing-in-diary-or-journal-isolated-flat-vector.webp?s=2048x2048&w=is&k=20&c=01i61u-67AN3-O9hLBjA1ETdoRSJbDR6W5zi_5DtLsU=');
          
            background-size: cover;
        }

        h1 {
            font-size: 24px;
            margin-top: 20px;
        }

        .row {
            margin-top: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .btn-primary {
            background-color: #007bff; /* Primary button color */
            color: #fff;
        }

        .btn-secondary {
            background-color: #6c757d; /* Secondary button color */
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Edit Author</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="AuthorId" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Author Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
