@model IEnumerable<LIBMGMT.Models.Author>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-image: url('your-background-image.jpg');
            background-size: cover;
        }

        h1 {
            font-size: 36px;
            color: #333;
            margin-top: 20px;
        }

        .create-button {
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            padding: 8px 12px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .button-link {
            color: #fff;
            text-decoration: none;
            padding: 8px 12px;
            border-radius: 5px;
            margin-right: 10px;
        }

        .edit-button {
            background-color: #28a745; /* Green color for Edit */
        }

        .details-button {
            background-color: #17a2b8; /* Blue color for Details */
        }

        .delete-button {
            background-color: #dc3545; /* Red color for Delete */
        }

        .table {
            background-color: #fff;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <h1>Index</h1>
    <p>
        <a asp-action="Create" class="create-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
            </svg> &nbsp; Create New
        </a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.AuthorId" class="button-link edit-button">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.AuthorId" class="button-link details-button">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.AuthorId" class="button-link delete-button">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
