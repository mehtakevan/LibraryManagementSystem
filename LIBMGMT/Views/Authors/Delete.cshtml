@model LIBMGMT.Models.Author

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-image: url('https://media.istockphoto.com/id/1271367191/vector/girl-writing-in-diary-or-journal-isolated-flat-vector.webp?s=2048x2048&w=is&k=20&c=01i61u-67AN3-O9hLBjA1ETdoRSJbDR6W5zi_5DtLsU=');
            background-size: cover;
        }

        h3 {
            font-size: 24px;
            color: #333;
            margin-top: 20px;
        }

        .row {
            background-color: #fff;
            padding: 15px;
            border-radius: 5px;
        }

        .col-sm-2 {
            font-weight: bold;
            text-align: right;
        }

        .col-sm-10 {
            padding-left: 10px;
        }

        .btn-danger {
            background-color: #dc3545;
            color: #fff;
            margin-right: 10px;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
        }
    </style>
</head>
<body>
    <h3>Are you sure you want to delete this?</h3>
    <div class="row">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="AuthorId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</body>
</html>
