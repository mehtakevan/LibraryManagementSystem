@model LIBMGMT.Models.Author

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-image: url('https://media.istockphoto.com/id/1271367191/vector/girl-writing-in-diary-or-journal-isolated-flat-vector.webp?s=2048x2048&w=is&k=20&c=01i61u-67AN3-O9hLBjA1ETdoRSJbDR6W5zi_5DtLsU=');
            background-size: cover;
        }

        h1 {
            font-size: 36px;
            color: #333;
            margin-top: 20px;
        }

        .row {
            background-color: #fff;
            padding: 15px;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
        }

        .btn-secondary {
            background-color: #007bff;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Author Details</h1>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.AuthorId" class="btn btn-primary">Edit</a> |
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</body>
</html>
