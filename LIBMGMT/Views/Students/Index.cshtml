@model IEnumerable<LIBMGMT.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-image: url('your-background-image.jpg');
            background-size: cover;
            background-color: #f5f5f5; /* Fallback background color */
        }

        h1 {
            font-size: 36px;
            color: #333;
            margin-top: 20px;
        }

        .create-button {
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            padding: 8px 12px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .button-link {
            color: #fff;
            text-decoration: none;
            padding: 8px 12px;
            border-radius: 5px;
            margin-right: 10px;
        }

        .table {
            background-color: #fff;
            border-radius: 5px;
        }

            .table th {
                background-color: #343a40; /* Dark background color for table header */
                color: #ffc107; /* Yellow text color for table header */
            }

            .table tbody tr:nth-child(odd) {
                background-color: #f2f2f2; /* Light gray background for odd rows */
            }

        .button-link:hover {
            background-color: #007BFF; /* Blue background color on hover */
            color: #fff; /* White text color on hover */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mt-4">Index</h1>
        <p>
            <a asp-action="Create" class="create-button">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                </svg> &nbsp; Create New
            </a>
        </p>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Gender)</th>
                    <th>@Html.DisplayNameFor(model => model.Course)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                        <td>@Html.DisplayFor(modelItem => item.Course)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-primary button-link">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.StudentId" class="btn btn-secondary button-link">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-danger button-link">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
